<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopfinity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalApp.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: red; 
            color: #212529; 
        }

        .navbar-custom {
            background-color: red; 
            border-radius:10px;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #ffffff !important;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffcc00 !important; 
                }

        .navbar-toggler {
            border-color: #ffffff; 
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor'%3E%3Cpath stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h16m-7 6h7'/%3E%3C/svg%3E"); /* Default toggle icon */
        }

        .container {
            margin-top: 20px;
        }

        a {
            color: #007bff; 
            text-decoration: none;
        }

            a:hover {
                color: #0056b3; 
                text-decoration: underline;
            }

        .navbar-brand {
            font-family: Arial, Helvetica, sans-serif, cursive; 
            font-size: 2rem; 
        }

        .title-container {
            text-align: center;
            margin-top: 30px;
            margin-bottom: 30px;
        }

            .title-container h1 {
                font-family: 'Brush Script MT', cursive; 
                color: #003366; 
                font-size: 3rem; 
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); 
            }

        .form-control {
            border-radius: 0.25rem; 
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075); 
        }

        .btn-primary {
            background-color: #003366; 
            border-color: #002d72; 
        }

            .btn-primary:hover {
                background-color: #002d72; 
                border-color: #001d3d; 
            }

        .box-shadow {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
        }
    </style>
</head>
<body>
    <header>
        <div class="@((ViewBag.HideNav ?? false) ? "d-none" : "")">
            @if (ViewData["HideNavbar"] == null || !(bool)ViewData["HideNavbar"])
            {
                <nav class="navbar navbar-expand-sm navbar-custom navbar-light border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shopfinity</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            }
        </div>
    </header>
    <div class="container">
        <div class="title-container">
            
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
