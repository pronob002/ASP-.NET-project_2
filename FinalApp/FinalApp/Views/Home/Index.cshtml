@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center header-background">
    <h1 class="display-4 cursive-title">Shopfinity</h1>
    <p class="subtitle-text"><a href="#" target="_blank">Your Ultimate Destination for Unmatched Deals</a>.</p>
    <div class="icon-container">
        <i class="fas fa-shopping-cart large-icon"></i> <!-- Shopping Cart Icon -->
    </div>
</div>

<style>
    * {
        font-family: Arial, Helvetica, sans-serif, cursive;
    }

    .header-background {
        background-color: green;
        padding: 40px;
        color: green;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .cursive-title {
        font-family: Arial, Helvetica, sans-serif, cursive;
        font-size: 3em;
        margin: 0;
        color: #FFD700;
    }

    .subtitle-text {
        color: #ffffff;
        font-size: 1.25em;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

        a:hover {
            text-decoration: underline;
            color: #f39c12;
        }

    .icon-container {
        margin-top: 20px; /* Add space between text and icon */
    }

    .large-icon {
        font-size: 4em; /* Adjust size as needed */
        color: #FFD700; /* Color of the icon */
    }
</style>

<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
