@model FinalApp.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/Register.css">
</head>
<body>
    <div class="container register-container">
        <h1 class="text-center">Register</h1>
        <form asp-action="Register" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="Name">
                        Name
                    </label>
                    <i class="fas fa-user"></i> 
                </div>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="Email">
                        Email
                    </label>
                    <i class="fas fa-envelope"></i> 
                </div>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="Age">
                        Age
                    </label>
                    <i class="fas fa-birthday-cake"></i> 
                </div>
                <input asp-for="Age" class="form-control" />
            </div>

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="Address">
                        Address
                    </label>
                    <i class="fas fa-map-marker-alt"></i> 
                </div>
                <input asp-for="Address" class="form-control" />
            </div>

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="ProfileImage">
                        Profile Image
                    </label>
                    <i class="fas fa-camera"></i> 
                </div>
                <input asp-for="ProfileImage" type="file" class="form-control" />
            </div>

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="MobileNumber">
                        Mobile Number
                    </label>
                    <i class="fas fa-phone"></i> 
                </div>
                <input asp-for="MobileNumber" class="form-control" />
            </div>

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="Role">
                        Role
                    </label>
                    <i class="fas fa-user-tag"></i> 
                </div>
                <select asp-for="Role" class="form-control">
                    <option value="Seller">Seller</option>
                    <option value="Customer">Customer</option>
                </select>
            </div>

            <div class="form-group">
                <div class="label-icon-wrapper">
                    <label asp-for="Password">
                        Password
                    </label>
                    <i class="fas fa-lock"></i> 
                </div>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary btn-register">Register</button>
        </form>

        <style>
            
        </style>


    </div>
</body>
</html>
