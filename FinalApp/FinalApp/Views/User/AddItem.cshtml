@model FinalApp.ViewModels.AddItemViewModel

@{
    ViewData["Title"] = "Add Item";
    ViewData["HideNavbar"] = true;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" type="text/css" href="/css/AddItems.css">

<div class="container">
    <h2><i class="fas fa-plus-circle"></i> Add Item</h2>
    <div class="form-container">
        <form asp-action="AddItem" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ItemName" class="form-label"><i class="fas fa-tag"></i> Item Name</label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="form-label"><i class="fas fa-dollar-sign"></i> Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label"><i class="fas fa-info-circle"></i> Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemImage" class="form-label"><i class="fas fa-image"></i> Upload Item Image</label>
                <input asp-for="ItemImage" type="file" class="form-control" />
                <span asp-validation-for="ItemImage" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom">Add Item</button>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
