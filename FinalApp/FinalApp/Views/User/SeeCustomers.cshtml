@model IEnumerable<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Customer Report</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/SeeCustomer.css">

</head>
<body>
    <div class="container">
        <form asp-action="Logout" method="get">
            <button type="submit" class="logout-btn"> <i class="fas fa-sign-out-alt"></i> Logout</button>
        </form>

        <h2><i class="fas fa-users mr-2"></i> Customers</h2>
        <table>
            <thead>
                <tr>
                    <th><i class="fas fa-user mr-2"></i>Customer Name</th>
                    <th><i class="fas fa-dollar-sign mr-2"></i>Total Spent</th>
                    <th><i class="fas fa-shopping-cart mr-2"></i>Items Purchased</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerName</td>
                        <td>@customer.TotalSpent.ToString("C")</td>
                        <td>
                            <ul>
                                @foreach (var item in customer.ItemsPurchased)
                                {
                                    <li>
                                        <i class="fas fa-box mr-2"></i>@item.ItemName - Quantity: @item.Quantity,
                                        Per Unit Price: @item.PerUnitPrice.ToString("C"),
                                        Total Price: @item.TotalPrice.ToString("C")
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
