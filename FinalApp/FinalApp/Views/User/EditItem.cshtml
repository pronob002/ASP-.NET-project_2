@model EditItemViewModel
@{
    ViewData["HideNavbar"] = true;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" type="text/css" href="/css/EditItem.css">


<form asp-action="EditItem" enctype="multipart/form-data" class="edit-item-form">
    <input type="hidden" asp-for="ItemId" />

    <div class="form-group">
        <label asp-for="ItemName" class="form-label"><i class="fas fa-tag"></i> Item Name</label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="form-label"><i class="fas fa-dollar-sign"></i> Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label"><i class="fas fa-info-circle"></i> Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemImage" class="form-label"><i class="fas fa-image"></i> Upload new image (optional):</label>
        <input type="file" asp-for="ItemImage" class="form-control" />
        <span asp-validation-for="ItemImage" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ExistingItemImagePath))
    {
        <div class="existing-image">
            <img src="@Model.ExistingItemImagePath" alt="Existing item image" class="img-thumbnail" />
        </div>
    }

    <button type="submit" class="submit-btn"><i class="fas fa-save"></i> Save Changes</button>
</form>
