@model FinalApp.ViewModels.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/Login.css">

</head>
<body>
    <div class="container login-container">
        <h1>Login</h1>
        <form asp-action="Login" method="post">
            <div class="form-group" style="position: relative;">
                <div class="label-icon-wrapper">
                    <label asp-for="Email">
                        Email
                    </label>
                    <i class="fas fa-envelope"></i> <!-- Email icon -->
                </div>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group" style="position: relative;">
                <div class="label-icon-wrapper">
                    <label asp-for="Password">
                        Password
                    </label>
                    <i class="fas fa-lock"></i> <!-- Password icon -->
                </div>
                <input asp-for="Password" type="password" class="form-control" style="padding-right: 40px; margin-top:5px;" />
            </div>

            <button type="submit" class="btn btn-primary btn-login">Login</button>
        </form>

        <style>
            .label-icon-wrapper {
                display: flex;
                align-items: center;
            }

                .label-icon-wrapper label {
                    margin-right: 10px;
                }

                .label-icon-wrapper i {
                    color: #007bff;
                    font-size: 1.2rem;
                }

            .form-group {
                margin-bottom: 20px;
            }

            .form-control {
                margin-top: 10px;
            }
        </style>


    </div>
</body>
</html>
